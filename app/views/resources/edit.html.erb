<h1>Editing resource</h1>

<%= form_for(@resource, :url => {:action => "update", :id => @resource.id}) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => {:f => f} %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', {:action => "show", :id => @resource.id} %> |
<%= link_to 'Back', {:action => "index"} %>
