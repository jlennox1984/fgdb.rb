<% if flash[:error] %><div class="error"><%= flash[:error] %></div><% end %>

<%= form_for :conditions, :url => {:action => "index2"} do |f| %>
<%= f.label "report_type", "Report Type" %>
<% grouped_list = {} %>
<% @report_types.each{|x| (grouped_list[x.category] ||= []) << x.name} %>
<%= f.select "report_type", grouped_options_for_select(grouped_list) %>
<%= f.label "submit", "" %>
<%= f.submit "Go!" %>
<% end %>
