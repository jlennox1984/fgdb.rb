<% form_tag "/sessions/create", :remote => true do -%>
<% if session[:unauthorized_params] %>
  <input type="hidden" name="goto[params]" value="<%= ERB::Util.html_escape(session[:unauthorized_params]) %>" />
<% end %>

<div class="form-element">
  <label for="login">Login</label>
  <%= text_field_tag 'login' %>
</div>

<div class="form-element">
  <label for="password">Password</label>
  <%= password_field_tag 'password' %>
</div>

<div class="form-element">
  <%= submit_tag 'Log in' %>
</div>
<% end -%>
