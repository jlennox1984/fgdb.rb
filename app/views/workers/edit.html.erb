<h1>Editing worker</h1>

<%= form_tag :action => 'update', :id => @worker do %>
  <div class="follow_scroll right_side">
    <%= submit_tag 'Edit' %> <br/>
    <%= link_to 'Show', :action => 'show', :id => @worker %> |
    <%= link_to 'Back', :action => 'list' %>
  </div>
  <%= render :partial => 'form' %>
<% end %>

